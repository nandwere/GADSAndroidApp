<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_background">

    <ImageView
        android:id="@+id/confirmation_dialog_clear"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="30dp"
        android:src="@drawable/ic_baseline_clear_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/confirmation_dialog_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/confirmation_dialog_clear"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp"
        android:drawablePadding="3dp"
        android:text="@string/are_you_sure"
        android:textSize="19sp"
        android:drawableRight="@drawable/ic_baseline_help_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:drawableEnd="@drawable/ic_baseline_help_24" />

    <Button
        android:id="@+id/confirmation_dialog_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/confirmation_dialog_message"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/yes"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:paddingEnd="40dp"
        android:paddingStart="40dp"
        android:paddingLeft="40dp"
        android:layout_centerHorizontal="true"
        android:textColor="#FFC107"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingRight="30dp" />

</RelativeLayout>